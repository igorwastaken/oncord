{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": ".",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  